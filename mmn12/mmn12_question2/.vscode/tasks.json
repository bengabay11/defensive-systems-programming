{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build mmn12-q2.cpp (Release)",
			"type": "shell",
			"command": "g++",
			"args": [
				"-m32", // Set the target binary to x86
				"-O3", // Optimization level for release build
				"${workspaceFolder}/mmn12-q2.cpp",
				"-o",
				"${workspaceFolder}/dist/release/mmn12-q2"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
